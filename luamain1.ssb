addHook("ThinkFrame", function()
	if (gametype == GT_COMPETITION) and not paused then
	   hud.disable("weaponrings")
       hud.disable("stagetitle")
	   hud.disable("lives")
	   hud.disable("time")
	   hud.disable("score")
	   hud.disable("rings")
	   for pl in players.iterate
	       if pl.mo and not pl.spectator then
		   
	       if pl.weapondelay == 0 then pl.weapondelay = UINT16_MAX end
		   end
	   end
	end
end)
